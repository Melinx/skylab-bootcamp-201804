doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel='stylesheet', href='./styles/main.css')
    title HANGMAN
  body
    main
    h1 Hangman
      form(action="/guess" method="POST")
        input(type="password" name="word")
        button(type="submit") Word to Guess
      form(action="/try" method="POST")
        input(type="text" name="text")
        button(type="submit") Submit
      each letter in guessed
        span.letter #{letter}
      if status === Hangman.WIN
        img(src=`/images/${attemptsUsed}.png`)
      else
        img(src=`/images/${attemptsUsed}.png`)
      form(action='/new-game' method = 'GET')
        button(type='submit') Restart
